@model List<UserVm>

@{
    ViewData["Title"] = "Manage Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!-- Page Header -->
<div class="page-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">
                <i class="bi bi-people-fill me-2"></i>
                Manage Users
            </h1>
            <p class="page-subtitle">View and manage all system users</p>
        </div>
        <div>
            <a asp-controller="Account" asp-action="Register" class="btn btn-primary-custom">
                <i class="bi bi-person-plus-fill me-2"></i>
                Add New User
            </a>
        </div>
    </div>
</div>

<!-- Users Table Card -->
<div class="row">
    <div class="col-12">
        <div class="card table-card shadow-sm">
            <div class="card-header">
                <h5 class="card-header-title mb-0">
                    <i class="bi bi-table me-2"></i>
                    All Users (@Model.Count)
                </h5>
            </div>
            <div class="card-body p-0">
                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover users-table mb-0">
                            <thead>
                                <tr>
                                    <th scope="col">
                                        <i class="bi bi-person me-1"></i>
                                        Name
                                    </th>
                                    <th scope="col">
                                        <i class="bi bi-envelope me-1"></i>
                                        Email
                                    </th>
                                    <th scope="col">
                                        <i class="bi bi-telephone me-1"></i>
                                        Phone Number
                                    </th>
                                    <th scope="col">
                                        <i class="bi bi-shield-check me-1"></i>
                                        Roles
                                    </th>
                                    <th scope="col" class="text-center">
                                        <i class="bi bi-gear me-1"></i>
                                        Actions
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <td>
                                            @if (!string.IsNullOrWhiteSpace(user.Name))
                                            {
                                                <div class="user-name-cell">
                                                    <div class="user-avatar">
                                                        @user.Name.Substring(0, 1).ToUpper()
                                                    </div>
                                                    <span class="fw-semibold">@user.Name</span>
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted-light">N/A</span>
                                            }
                                        </td>
                                        <td class="text-muted">
                                            @if (!string.IsNullOrWhiteSpace(user.Email))
                                            {
                                                <i class="bi bi-envelope-fill me-1 text-secondary"></i>
                                                <text>@user.Email</text>
                                            }
                                            else
                                            {
                                                <span class="text-muted-light">N/A</span>
                                            }
                                        </td>
                                        <td class="text-muted">
                                            @if (!string.IsNullOrWhiteSpace(user.PhoneNumber))
                                            {
                                                <i class="bi bi-phone-fill me-1 text-secondary"></i>
                                                <text>@user.PhoneNumber</text>
                                            }
                                            else
                                            {
                                                <span class="text-muted-light">N/A</span>
                                            }
                                        </td>
                                        <td>
                                            @if (user.Roles != null && user.Roles.Any())
                                            {
                                                <div class="roles-container">
                                                    @foreach (var role in user.Roles)
                                                    {
                                                        @if (!string.IsNullOrWhiteSpace(role))
                                                        {
                                                            <span class="badge role-badge">@role</span>
                                                        }
                                                    }
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted-light">No roles</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <div class="action-buttons">
                                               
                                                <a asp-controller="Admin" 
                                                   asp-action="Delete" 
                                                   asp-route-id="@user.Id" 
                                                   class="btn btn-sm btn-action-delete"
                                                   title="Delete User">
                                                    <i class="bi bi-trash-fill"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <div class="empty-state-icon">
                            <i class="bi bi-people"></i>
                        </div>
                        <h4 class="empty-state-title">No Users Found</h4>
                        <p class="empty-state-text">There are no users in the system yet. Start by adding your first user.</p>
                        <a asp-controller="AdminUser" asp-action="Create" class="btn btn-primary-custom mt-3">
                            <i class="bi bi-person-plus-fill me-2"></i>
                            Add First User
                        </a>
                    </div>
                }
            </div>
            @if (Model != null && Model.Any())
            {
                <div class="card-footer">
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="text-muted">
                            <i class="bi bi-info-circle me-1"></i>
                            Showing @Model.Count user(s)
                        </span>
                        <span class="text-muted small">
                            Click delete to remove a user from the system
                        </span>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    /* Page Header */
    .page-header {
        padding-bottom: 1rem;
        border-bottom: 2px solid #D2C1B6;
    }

    .page-title {
        color: #1B3C53;
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .page-subtitle {
        color: #6c757d;
        font-size: 1rem;
        margin: 0;
    }

    /* Primary Button */
    .btn-primary-custom {
        background: linear-gradient(135deg, #1B3C53 0%, #2a5270 100%);
        color: #ffffff;
        border: none;
        padding: 0.625rem 1.5rem;
        font-weight: 500;
        border-radius: 8px;
        transition: all 0.3s ease;
        box-shadow: 0 2px 6px rgba(27, 60, 83, 0.2);
    }

    .btn-primary-custom:hover {
        background: linear-gradient(135deg, #2a5270 0%, #1B3C53 100%);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(27, 60, 83, 0.3);
        color: #ffffff;
    }

    /* Table Card */
    .table-card {
        border: none;
        border-radius: 12px;
        background: #ffffff;
        overflow: hidden;
    }

    .table-card .card-header {
        background: linear-gradient(135deg, #1B3C53 0%, #2a5270 100%);
        border: none;
        padding: 1.25rem 1.5rem;
    }

    .card-header-title {
        color: #ffffff;
        font-size: 1.1rem;
        font-weight: 600;
    }

    .table-card .card-footer {
        background-color: #F9F3EF;
        border-top: 1px solid #D2C1B6;
        padding: 1rem 1.5rem;
    }

    /* Table Styles */
    .users-table {
        margin: 0;
    }

    .users-table thead {
        background-color: #1B3C53;
    }

    .users-table thead th {
        color: #ffffff;
        font-weight: 600;
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        padding: 1rem 1.25rem;
        border: none;
        white-space: nowrap;
    }

    .users-table tbody tr {
        transition: all 0.2s ease;
        border-bottom: 1px solid #e9ecef;
    }

    .users-table tbody tr:hover {
        background-color: #F9F3EF;
        transform: translateX(2px);
    }

    .users-table tbody tr:last-child {
        border-bottom: none;
    }

    .users-table tbody td {
        padding: 1.25rem 1.25rem;
        vertical-align: middle;
        color: #495057;
        font-size: 0.95rem;
    }

    /* User Name Cell */
    .user-name-cell {
        display: flex;
        align-items: center;
        gap: 0.875rem;
    }

    .user-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: linear-gradient(135deg, #456882 0%, #1B3C53 100%);
        color: #ffffff;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 1rem;
        flex-shrink: 0;
    }

    .user-name-cell .fw-semibold {
        color: #1B3C53;
        font-size: 1rem;
    }

    /* Roles Badges */
    .roles-container {
        display: flex;
        flex-wrap: wrap;
        gap: 0.375rem;
    }

    .role-badge {
        background-color: #456882;
        color: #ffffff;
        font-size: 0.75rem;
        font-weight: 500;
        padding: 0.375rem 0.75rem;
        border-radius: 6px;
        text-transform: capitalize;
    }

    /* Action Buttons */
    .action-buttons {
        display: flex;
        gap: 0.5rem;
        justify-content: center;
    }

    .btn-action-edit,
    .btn-action-delete {
        padding: 0.5rem 0.875rem;
        border-radius: 6px;
        transition: all 0.2s ease;
        font-size: 0.95rem;
        border: none;
    }

    .btn-action-edit {
        background-color: #456882;
        color: #ffffff;
    }

    .btn-action-edit:hover {
        background-color: #1B3C53;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(69, 104, 130, 0.3);
        color: #ffffff;
    }

    .btn-action-delete {
        background-color: #dc3545;
        color: #ffffff;
    }

    .btn-action-delete:hover {
        background-color: #c82333;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(220, 53, 69, 0.3);
        color: #ffffff;
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
    }

    .empty-state-icon {
        font-size: 5rem;
        color: #D2C1B6;
        margin-bottom: 1.5rem;
    }

    .empty-state-title {
        color: #1B3C53;
        font-size: 1.75rem;
        font-weight: 600;
        margin-bottom: 0.75rem;
    }

    .empty-state-text {
        color: #6c757d;
        font-size: 1.05rem;
        margin-bottom: 0;
        max-width: 500px;
        margin-left: auto;
        margin-right: auto;
    }

    /* Text Utilities */
    .text-muted-light {
        color: #adb5bd;
        font-style: italic;
    }

    .text-secondary {
        color: #456882 !important;
    }

    /* Responsive Adjustments */
   @@media (max-width: 768px) {
        .page-header .d-flex {
            flex-direction: column;
            align-items: flex-start !important;
            gap: 1rem;
        }

        .users-table thead th {
            padding: 0.75rem 0.875rem;
            font-size: 0.75rem;
        }

        .users-table tbody td {
            padding: 1rem 0.875rem;
            font-size: 0.875rem;
        }

        .user-avatar {
            width: 32px;
            height: 32px;
            font-size: 0.875rem;
        }

        .action-buttons {
            flex-direction: column;
        }

        .btn-action-edit,
        .btn-action-delete {
            width: 100%;
        }

        .empty-state {
            padding: 3rem 1rem;
        }

        .empty-state-icon {
            font-size: 3.5rem;
        }

        .empty-state-title {
            font-size: 1.35rem;
        }
    }

    @@media (max-width: 576px) {
        .table-responsive {
            font-size: 0.85rem;
        }

        .user-name-cell {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.5rem;
        }

        .roles-container {
            flex-direction: column;
            align-items: flex-start;
        }
    }
</style>