
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model UserVm



<!-- Page Header -->
<div class="page-header mb-4">
    <h1 class="page-title text-danger">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        Delete User
    </h1>
    <p class="page-subtitle">Review the user details before confirming deletion</p>
</div>

<!-- Delete Confirmation Card -->
<div class="row justify-content-center">
    <div class="col-lg-8 col-xl-6">
        <div class="card delete-card shadow-lg">
            <div class="card-header">
                <h5 class="card-header-title mb-0">
                    <i class="bi bi-shield-exclamation me-2"></i>
                    Confirm User Deletion
                </h5>
            </div>
            <div class="card-body">
                <!-- Warning Message -->
                <div class="alert alert-danger-custom" role="alert">
                    <div class="alert-icon">
                        <i class="bi bi-exclamation-octagon-fill"></i>
                    </div>
                    <div class="alert-content">
                        <h5 class="alert-heading mb-2">Warning: This Action is Permanent!</h5>
                        <p class="mb-0">
                            You are about to permanently delete this user from the system.
                            This action <strong>cannot be undone</strong>. All user data,
                            associated records, and exam history will be removed.
                        </p>
                    </div>
                </div>

                <!-- User Details Section -->
                <div class="user-details-section">
                    <h6 class="details-heading">
                        <i class="bi bi-person-fill me-2"></i>
                        User Information
                    </h6>

                    <div class="details-grid">
                        <!-- Name -->
                        <div class="detail-item">
                            <label class="detail-label">
                                <i class="bi bi-person me-2"></i>
                                Name
                            </label>
                            <div class="detail-value">
                                @if (!string.IsNullOrWhiteSpace(Model.Name))
                                {
                                    <text>@Model.Name</text>
                                }
                                else
                                {
                                    <span class="text-muted-light">N/A</span>
                                }
                            </div>
                        </div>

                        <!-- Email -->
                        <div class="detail-item">
                            <label class="detail-label">
                                <i class="bi bi-envelope me-2"></i>
                                Email Address
                            </label>
                            <div class="detail-value">
                                @if (!string.IsNullOrWhiteSpace(Model.Email))
                                {
                                    <text>@Model.Email</text>
                                }
                                else
                                {
                                    <span class="text-muted-light">N/A</span>
                                }
                            </div>
                        </div>

                        <!-- Phone Number -->
                        <div class="detail-item">
                            <label class="detail-label">
                                <i class="bi bi-telephone me-2"></i>
                                Phone Number
                            </label>
                            <div class="detail-value">
                                @if (!string.IsNullOrWhiteSpace(Model.PhoneNumber))
                                {
                                    <text>@Model.PhoneNumber</text>
                                }
                                else
                                {
                                    <span class="text-muted-light">N/A</span>
                                }
                            </div>
                        </div>

                        <!-- Roles -->
                        <div class="detail-item">
                            <label class="detail-label">
                                <i class="bi bi-shield-check me-2"></i>
                                Assigned Roles
                            </label>
                            <div class="detail-value">
                                @if (Model.Roles != null && Model.Roles.Any())
                                {
                                    <div class="roles-display">
                                        @foreach (var role in Model.Roles)
                                        {
                                            @if (!string.IsNullOrWhiteSpace(role))
                                            {
                                                <span class="role-tag">@role</span>
                                            }
                                        }
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted-light">No roles assigned</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Delete Form -->
                <form asp-controller="Admin" asp-action="DeleteConfirmed" method="post" class="delete-form">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />

                    <div class="form-actions">
                        <a asp-controller="Admin" asp-action="Index" class="btn btn-cancel">
                            <i class="bi bi-x-circle me-2"></i>
                            Cancel
                        </a>
                        <button type="submit" class="btn btn-delete">
                            <i class="bi bi-trash-fill me-2"></i>
                            Delete User Permanently
                        </button>
                    </div>
                </form>
            </div>
            <div class="card-footer">
                <small class="text-muted">
                    <i class="bi bi-info-circle me-1"></i>
                    Make sure you have reviewed all information before proceeding with deletion.
                </small>
            </div>
        </div>
    </div>
</div>

<style>
    /* Page Header */
    .page-header {
        padding-bottom: 1rem;
        border-bottom: 2px solid #D2C1B6;
        margin-bottom: 2rem;
    }

    .page-title {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .page-subtitle {
        color: #6c757d;
        font-size: 1rem;
        margin: 0;
    }

    /* Delete Card */
    .delete-card {
        border: none;
        border-radius: 12px;
        background: #ffffff;
        overflow: hidden;
        border: 2px solid #dc3545;
    }

        .delete-card .card-header {
            background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
            border: none;
            padding: 1.25rem 1.5rem;
        }

    .card-header-title {
        color: #ffffff;
        font-size: 1.15rem;
        font-weight: 600;
    }

    .delete-card .card-body {
        padding: 2rem 1.5rem;
    }

    .delete-card .card-footer {
        background-color: #F9F3EF;
        border-top: 1px solid #D2C1B6;
        padding: 1rem 1.5rem;
    }

    /* Alert Custom */
    .alert-danger-custom {
        background: linear-gradient(135deg, #fff5f5 0%, #ffe8e8 100%);
        border: 2px solid #dc3545;
        border-radius: 10px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        display: flex;
        gap: 1.25rem;
    }

    .alert-icon {
        font-size: 2.5rem;
        color: #dc3545;
        flex-shrink: 0;
    }

    .alert-content {
        flex: 1;
    }

    .alert-heading {
        color: #dc3545;
        font-weight: 700;
        font-size: 1.1rem;
    }

    .alert-content p {
        color: #721c24;
        line-height: 1.6;
    }

    /* User Details Section */
    .user-details-section {
        background-color: #F9F3EF;
        border-radius: 10px;
        padding: 1.5rem;
        margin-bottom: 2rem;
    }

    .details-heading {
        color: #1B3C53;
        font-weight: 700;
        font-size: 1.1rem;
        margin-bottom: 1.5rem;
        padding-bottom: 0.75rem;
        border-bottom: 2px solid #D2C1B6;
    }

    .details-grid {
        display: grid;
        gap: 1.5rem;
    }

    .detail-item {
        display: grid;
        grid-template-columns: 180px 1fr;
        gap: 1rem;
        align-items: start;
    }

    .detail-label {
        color: #456882;
        font-weight: 600;
        font-size: 0.95rem;
        margin: 0;
        padding-top: 0.25rem;
    }

    .detail-value {
        color: #1B3C53;
        font-size: 1rem;
        font-weight: 500;
        background: #ffffff;
        padding: 0.75rem 1rem;
        border-radius: 6px;
        border: 1px solid #D2C1B6;
    }

    /* Roles Display */
    .roles-display {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .role-tag {
        background-color: #456882;
        color: #ffffff;
        padding: 0.5rem 1rem;
        border-radius: 6px;
        font-size: 0.875rem;
        font-weight: 500;
        display: inline-block;
    }

    /* Form Actions */
    .delete-form {
        margin-top: 2rem;
    }

    .form-actions {
        display: flex;
        gap: 1rem;
        justify-content: flex-end;
    }

    .btn-cancel,
    .btn-delete {
        padding: 0.875rem 2rem;
        border-radius: 8px;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        border: none;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
    }

    .btn-cancel {
        background-color: #6c757d;
        color: #ffffff;
    }

        .btn-cancel:hover {
            background-color: #5a6268;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(108, 117, 125, 0.3);
            color: #ffffff;
        }

    .btn-delete {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        color: #ffffff;
        cursor: pointer;
    }

        .btn-delete:hover {
            background: linear-gradient(135deg, #c82333 0%, #bd2130 100%);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(220, 53, 69, 0.4);
        }

    /* Text Utilities */
    .text-muted-light {
        color: #adb5bd;
        font-style: italic;
    }

    /* Responsive Adjustments */
    @@media (max-width: 768px) {
        .page-title

    {
        font-size: 1.5rem;
    }

    .delete-card .card-body {
        padding: 1.5rem 1rem;
    }

    .alert-danger-custom {
        flex-direction: column;
        gap: 1rem;
        padding: 1.25rem;
    }

    .alert-icon {
        font-size: 2rem;
    }

    .detail-item {
        grid-template-columns: 1fr;
        gap: 0.5rem;
    }

    .form-actions {
        flex-direction: column-reverse;
    }

    .btn-cancel,
    .btn-delete {
        width: 100%;
        justify-content: center;
    }

    }

    @@media (max-width: 576px) {
        .user-details-section

    {
        padding: 1rem;
    }

    .details-grid {
        gap: 1rem;
    }

    .detail-value {
        padding: 0.5rem 0.75rem;
        font-size: 0.9rem;
    }

    .btn-cancel,
    .btn-delete {
        padding: 0.75rem 1.5rem;
        font-size: 0.95rem;
    }

    }
</style>