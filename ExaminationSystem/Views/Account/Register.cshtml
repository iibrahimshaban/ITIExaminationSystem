@model RegisterVm

@{
    ViewData["Title"] = "Create New User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="mb-1 admin-page-title">Create New User</h2>
                    <p class="text-muted mb-0">Add a new user to the exam system</p>
                </div>
                <a asp-action="Index" asp-controller="Admin" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8 col-xl-7">
            <div class="card shadow-sm border-0 admin-card">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0 card-title-admin">
                        <i class="bi bi-person-plus-fill me-2 text-accent"></i>User Information
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Register" asp-controller="Account" method="post">
                        <input type="hidden" asp-for="RedirectUrl" />

                        @if (!ViewData.ModelState.IsValid && ViewData.ModelState[""] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                <strong>Error:</strong> @ViewData.ModelState[""].Errors[0].ErrorMessage
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        <div class="row g-3">
                            <div class="col-md-12">
                                <label asp-for="Name" class="form-label admin-label">
                                    Full Name <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Name" class="form-control admin-input" placeholder="Enter full name" />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>

                            <div class="col-md-12">
                                <label asp-for="Email" class="form-label admin-label">
                                    Email Address <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Email" type="email" class="form-control admin-input" placeholder="user@example.com" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <div class="col-md-12">
                                <label asp-for="PhoneNumber" class="form-label admin-label">
                                    Phone Number
                                </label>
                                <input asp-for="PhoneNumber" type="tel" class="form-control admin-input" placeholder="(Optional)" />
                                <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Password" class="form-label admin-label">
                                    Password <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Password" type="password" class="form-control admin-input" placeholder="Create password" />
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="ConfirmPassword" class="form-label admin-label">
                                    Confirm Password <span class="text-danger">*</span>
                                </label>
                                <input asp-for="ConfirmPassword" type="password" class="form-control admin-input" placeholder="Confirm password" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                            </div>

                            <div class="col-md-12">
                                <label asp-for="Role" class="form-label admin-label">
                                    User Role <span class="text-danger">*</span>
                                </label>
                                <select asp-for="Role" asp-items="Model.RoleList" class="form-select admin-input" id="roleSelect">
                                    <option value="">-- Select Role --</option>
                                </select>
                                <span asp-validation-for="Role" class="text-danger small"></span>
                                <div class="form-text">
                                    <i class="bi bi-info-circle me-1"></i>
                                    Assign the appropriate role for this user's permissions
                                </div>
                            </div>
                        </div>
                       
                        <!-- Instructor Section -->
                        <!-- Instructor Section -->
                        <div id="instructorSection" class="mt-4 pt-3 border-top" style="display: none;">
                            <h6 class="mb-3 admin-label">
                                <i class="bi bi-person-workspace me-2"></i>Instructor Details
                            </h6>

                            <div class="row g-3">

                                <div class="col-md-6">
                                    <label asp-for="BranchId" class="form-label admin-label">
                                        Branch <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="BranchId"
                                            asp-items="Model.BranchList"
                                            class="form-select admin-input"
                                            id="instructorBranchSelect">
                                        <option value="">-- Select Branch --</option>
                                    </select>
                                    <span asp-validation-for="BranchId" class="text-danger small"></span>
                                </div>

                                <div class="col-md-12">
                                    <label class="form-label admin-label">
                                        Assigned Courses <span class="text-danger">*</span>
                                    </label>

                                    <!-- ✅ THIS WAS MISSING -->
                                    <div id="coursesContainer"
                                         class="border rounded p-3 admin-input"
                                         style="max-height: 250px; overflow-y: auto;">
                                        <span class="text-muted">
                                            Select a branch to load courses
                                        </span>
                                    </div>

                                    <span asp-validation-for="SelectedCourseIds" class="text-danger small"></span>
                                </div>

                            </div>
                        </div>


                        <!-- Student Section -->
                        <div id="studentSection" class="mt-4 pt-3 border-top" style="display: none;">
                            <h6 class="mb-3 admin-label">
                                <i class="bi bi-person-badge me-2"></i>Student Details
                            </h6>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="BranchId" class="form-label admin-label">
                                    Branch <span class="text-danger">*</span>
                                </label>
                                    <select asp-for="BranchId"
                                            asp-items="Model.BranchList"
                                            class="form-select admin-input"
                                            id="studentBranchSelect">
                                        <option value="">-- Select Branch --</option>
                                    </select>
                                <span asp-validation-for="BranchId" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="TrackId" class="form-label admin-label">
                                    Track <span class="text-danger">*</span>
                                </label>
                                    <select asp-for="TrackId"
                                            asp-items="Model.TrackList"
                                            class="form-select admin-input"
                                            id="studentTrackSelect"
                                            disabled>
                                        <option value="">-- Select Track --</option>
                                    </select>
                                <span asp-validation-for="TrackId" class="text-danger small"></span>
                                <div class="form-text">
                                    <i class="bi bi-info-circle me-1"></i>
                                    Select a branch first to enable track selection
                                </div>
                            </div>
                        </div>
                        </div>
                        <div class="d-flex justify-content-end gap-2 mt-4 pt-3 border-top">
                            <a asp-action="Index" asp-controller="Admin" class="btn btn-light px-4">
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-primary-custom px-4">
                                <i class="bi bi-check-circle me-2"></i>Create User
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card shadow-sm border-0 admin-card mt-3">
                <div class="card-body">
                    <h6 class="mb-2 text-secondary">
                        <i class="bi bi-shield-check me-2"></i>Password Requirements
                    </h6>
                    <ul class="small text-muted mb-0 ps-4">
                        <li>At least 8 characters long</li>
                        <li>Contains uppercase and lowercase letters</li>
                        <li>Includes at least one number</li>
                        <li>Contains at least one special character</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-xl-5">
            <div class="card shadow-sm border-0 admin-card">
                <div class="card-header bg-light border-bottom">
                    <h6 class="mb-0 text-secondary">
                        <i class="bi bi-lightbulb me-2"></i>Quick Guide
                    </h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <strong class="text-primary-custom d-block mb-1">Student Role</strong>
                        <p class="small text-muted mb-0">Can take exams and view their results</p>
                    </div>
                    <div class="mb-3">
                        <strong class="text-primary-custom d-block mb-1">Teacher Role</strong>
                        <p class="small text-muted mb-0">Can create and manage exams and questions</p>
                    </div>
                    <div class="mb-0">
                        <strong class="text-primary-custom d-block mb-1">Admin Role</strong>
                        <p class="small text-muted mb-0">Full system access including user management</p>
                    </div>
                </div>
            </div>

            <div class="alert alert-info border-0 mt-3" role="alert">
                <i class="bi bi-envelope me-2"></i>
                <strong>Note:</strong> An email will be sent to the user with their login credentials.
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        (function () {

            const roleSelect = document.getElementById('roleSelect');

            const instructorSection = document.getElementById('instructorSection');
            const studentSection = document.getElementById('studentSection');

            const studentBranch = document.getElementById('studentBranchSelect');
            const studentTrack = document.getElementById('studentTrackSelect');

            const instructorBranch = document.getElementById('instructorBranchSelect');
            const coursesContainer = document.getElementById('coursesContainer');

            function toggleRole() {
                instructorSection.style.display = 'none';
                studentSection.style.display = 'none';

                if (roleSelect.value === 'InstructorRole') {
                    instructorSection.style.display = 'block';
                }

                if (roleSelect.value === 'StudentRole') {
                    studentSection.style.display = 'block';
                }
            }

            roleSelect.addEventListener('change', toggleRole);
            toggleRole();

            // STUDENT → TRACKS
            studentBranch?.addEventListener('change', () => {
                studentTrack.innerHTML = '<option value="">-- Select Track --</option>';
                studentTrack.disabled = true;

                if (!studentBranch.value) return;

                fetch(`/api/lookups/tracks-by-branch/${studentBranch.value}`)
                    .then(r => r.json())
                    .then(data => {
                        data.forEach(t => {
                            studentTrack.innerHTML += `<option value="${t.id}">${t.name}</option>`;
                        });
                        studentTrack.disabled = false;
                    });
            });

            // INSTRUCTOR → COURSES
                   // INSTRUCTOR → COURSES
        instructorBranch?.addEventListener('change', () => {

            coursesContainer.innerHTML =
                '<span class="text-muted">Loading courses...</span>';

            if (!instructorBranch.value) {
                coursesContainer.innerHTML =
                    '<span class="text-muted">Select a branch to load courses</span>';
                return;
            }

            fetch(`/api/lookups/courses-by-branch/${instructorBranch.value}`)
                .then(r => r.json())
                .then(data => {

                    coursesContainer.innerHTML = '';

                    if (!data.length) {
                        coursesContainer.innerHTML =
                            '<span class="text-muted">No courses available for this branch</span>';
                        return;
                    }

                    data.forEach(c => {
                        coursesContainer.innerHTML += `
                            <div class="form-check mb-2">
                                <input class="form-check-input"
                                       type="checkbox"
                                       name="SelectedCourseIds"
                                       value="${c.id}"
                                       id="course_${c.id}">
                                <label class="form-check-label" for="course_${c.id}">
                                    ${c.name}
                                </label>
                            </div>`;
                    });
                });
        });


        })();
    </script>


}
